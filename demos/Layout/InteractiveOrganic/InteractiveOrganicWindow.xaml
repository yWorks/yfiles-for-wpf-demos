<Window x:Class="Demo.yFiles.Layout.InteractiveOrganic.InteractiveOrganicWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ywpf="http://www.yworks.com/xml/yfiles-wpf/3.0/xaml"
    Title="Demo.yFiles.Layout.InteractiveOrganic" Height="400" Width="800" Loaded="OnLoaded" Style="{StaticResource DemoWindow}"
    >
    <HeaderedContentControl Style="{StaticResource DemoStyle}">
        <HeaderedContentControl.Header>
            <RichTextBox BorderThickness="0" IsReadOnly="True">
                <FlowDocument>
                    <Paragraph>
                        This demo shows how to perform interactive layout updates with class
                        <Run FontStyle="Italic">InteractiveOrganicLayout</Run> together with a custom
                        <Run FontStyle="Italic">IPositionHandler</Run> implementation.
                    </Paragraph>
                    <Paragraph Style="{StaticResource HtmlH2}">
                        Things to Try
                    </Paragraph>
                    <List>
                        <ListItem>
                            <Paragraph>Create and delete nodes and edges.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>Note that this won't affect the layout immediately.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>Select nodes by clicking on them or using marquee selection and move them around.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>Note that disconnected components won't be updated if no node is moved, however the moved 
                                componentes are distracted by the fixed components.</Paragraph>
                        </ListItem>
                    </List>
                </FlowDocument>
            </RichTextBox>
        </HeaderedContentControl.Header>
        <DockPanel>
            <ToolBarTray Height="Auto" Name="toolBarTray" Width="Auto" DockPanel.Dock="Top">
                <ToolBar Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ToolBarTray}}}" Height="Auto" Name="toolBar">
                    <Button Command="IncreaseZoom" CommandTarget="{Binding ElementName=graphControl}"/>
                    <Button Command="DecreaseZoom" CommandTarget="{Binding ElementName=graphControl}"/>
                    <Button Command="{x:Static ywpf:GraphControl.FitGraphBoundsCommand}" CommandTarget="{Binding ElementName=graphControl}"/>
                </ToolBar>
            </ToolBarTray>            
            <ywpf:GraphControl Width="Auto" x:Name="graphControl"  />
        </DockPanel>
    </HeaderedContentControl>    
</Window>
