        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="yFilesOptionEditor:EditorControl">
                        <Border Background="{TemplateBinding Background}" MinWidth="100" MinHeight="100" BorderThickness="{TemplateBinding Margin}">
