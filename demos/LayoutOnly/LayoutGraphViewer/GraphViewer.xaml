<Window x:Class="Demo.Layout.LayoutGraphViewer.GraphViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Title="This is a stand-in for a real Viewer. This is *not* the yFiles-Viewer component."
        d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Save As" Click="MenuItemSave_OnClick" />
                <MenuItem Header="_Exit" Click="MenuItemExit_OnClick" />
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Click="Btn_zoomIn">Zoom In</Button>
            <Button Click="Btn_zoomOut">Zoom Out</Button>
            <Button Click="Btn_actualSize">Actual Size</Button>
        </StackPanel>

        <TabControl Name="TC_Graphs"  DockPanel.Dock="Bottom" VerticalAlignment="Stretch" Height="Auto" >

        </TabControl>
    </DockPanel>
</Window>